<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cpt202.mapper.UserMapper">

    <sql id="Base_Column_List">
        id,username,password,name,phone,email,avatar,role,account
    </sql>

    <select id="selectAll" resultType="com.cpt202.domain.User">
        select
        <include refid="Base_Column_List" />
        from user
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="username != null"> and username like concat('%', #{username}, '%')</if>
            <if test="password != null"> and password= #{password}</if>
            <if test="name != null"> and name= #{name}</if>
            <if test="phone != null"> and phone= #{phone}</if>
            <if test="email != null"> and email= #{email}</if>
            <if test="avatar != null"> and avatar= #{avatar}</if>
            <if test="role != null"> and role= #{role}</if>
        </where>
    </select>

    <select id="selectById" resultType="com.cpt202.domain.User">
        select
        <include refid="Base_Column_List" />
        from user
        where id = #{id}
    </select>


    <delete id="deleteById">
        delete from cpt202.user
        where  id = #{id}
    </delete>



    <update id="updateById" parameterType="com.cpt202.domain.User">
        update user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="account != null">
                account = #{account},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="expiredDate != null">
                expired_date = #{expiredDate},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
        </set>
        where id = #{id} 
    </update>


    <select id="selectUserCount" resultType="int">
        SELECT COUNT(*) FROM user
    </select>


</mapper>